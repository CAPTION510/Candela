calculation  iprofile  # pair Distribution Function.
geo_in_type  QE   # input type of geometry file: PROFESS/VASP/QE/ABINIT/MESIA
geo_directory ../hexane_oh.pos

geo_1        1 # starting geometry
geo_2        10 # ending geometry
geo_interval 1 # geometry interval

geo_out    iprofile.dat # output static structure factor name.

iprof_nr     500
iprof_b      0.5


celldm1 12.444655509
celldm2 12.444655509
celldm3 26.9617536455 # celldm3 in Angstrom

ntype        3       # number of different types of atoms.
natom        407     # total number of atoms.

natom1 96 # O
natom2 36 # C
natom3 275 # H
id1 O
id2 C
id3 H
